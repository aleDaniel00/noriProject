extends layouts/header.jade
block content
			if(msj)
				.page-data
					.backdrop.gauss
					.container
						.card.card-container
							img#profile-img.profile-img-card(src='//ssl.gstatic.com/accounts/ui/avatar_2x.png' alt='')
							p#profile-name.profile-name-card #{msj}
							form.form-signin(method="post" action="/")
								span#reauth-email.reauth-email
								input#inputEmail.form-control(type='text', placeholder='Name User', required='', autofocus='',name='user')
								input#inputPassword.form-control(type='password', placeholder='Password', required='',name='pass')
								button.btn.btn-lg.btn-primary.btn-block.btn-signin(type='submit' name="submit" value="Login") Sign in
			.header#home(ng-class="{'gauss':login}")
				.button_menu(ng-class="{'open':menu}")
					ul#caja.begin(ng-click="toggle()" ng-class="{'open':menu}")
						li.cajita
							.link.animation1
						li.cajita
							.link.animation2
						li.cajita
							.link.animation3
					ul.menu-desplegable(ng-class="{'open':menu,'begin':!menu}")
						li.item-m-d(ng-repeat="item in anclas")
							a(href="#{{item.value}}" ng-click="toggle()")
								p	{{item.value}}
								p
									small {{item.intro}}
								.border-lie
				.logo
					img(ng-if="srcLogo" ng-src="{{srcLogo}}", alt="Norali - logotipo")
				ul.list_lenguages
					li(ng-repeat="item in lenguajes" ng-click="changeLanguage(item.value)") 	{{item.value}}
			.slide(ng-class="{'gauss':login}")
				.content_slide
					p {{intro.titulo | translate}}!
					ul
						li
							p {{intro.parrafos[0].parrafo1}}
						li
							p {{intro.parrafos[0].parrafo2}}
						li
							p {{intro.parrafos[0].parrafo3}}
				.button_down
					button(scroll-on-click)
						img(src="images/mouse.png", alt="button-mouse_down")
			.portfolio#design
				.header_portfolio
					h2 {{encabezados[1].value}}
					.jobs(ng-repeat="item in habilidades")
						.job_box_image(ng-if="$index%2==0")
							img( ng-if="item.srcImgMini" ng-src="{{item.srcImgMini}}", alt="" ng-click="openComponentModal(item)")
						.job_box_content
							h3 {{item.titulo}}
							p {{item.contenido}}
							button(type="button" ng-click="openComponentModal(item.srcImgBig)") More
						.job_box_image(ng-if="$index%2!==0")
							img(ng-if="item.srcImgMini" ng-src="{{item.srcImgMini}}", alt="" ng-click="openComponentModal(item)")				
			.photography
				.header_photography
					h2 {{encabezados[3].value}}
					button(ng-click="openGallery()")
						img(ng-src="{{photography.src_fondo}}")		
						span.flotante {{photography.descripcion}}					
			.about#about
				.header_about
					h2 {{encabezados[2].value}}
					.columns
						.column
							.box_xx(ng-repeat="item in about.columna_tipo1")
								h3 {{item.titulo}}
								.sub_box_y
									p {{item.parrafo}}
						.column
							.box_xx
								h3 {{about.columna_tipo2.titulo}}.
								.sub_box_y(ng-repeat="item in about.columna_tipo2.contenidos")
									h4 {{item.duracion}}
									p.institute {{item.institucion}}
									p.function {{item.titulo}}
									p.location {{item.parrafo3}}
						.column
							.box_xx
								h3 {{about.columna_tipo3.titulo}}.
								.sub_box_y
									div(ng-repeat="item in about.columna_tipo3.contenidos")
										h4 {{item.duracion}}
										p {{item.parrafo}}
			.contact#contact
				h2 {{encabezados[4].value}}
				form(method="post" action="/")
					.form_group
						label
							span Name
							input(type="text" name="user" required)
					.form_group
						label
							span E-mail
							input(type="text" name="user" required)
					.form_group
						label
							span Message
							textarea(name="", cols="30", rows="10")
					.form_group
						input.btn(type="submit" name="submit" value="Send")
				.datos
					.email
						p E-mail
						p 
							a(href="mailto:norali.emilio@gmail.com") norali.emilio@gmail.com
					.linkedin
						p Linkedin
						p 
							a(href="https://www.linkedin.com/in/noral√≠-emilio-146192a8") Norali Nayla Emilio
								
							
			include layouts/footer.jade 